<Window x:Class="STimWPF.ContentWindow" x:Name="contentW"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:converters="clr-namespace:STimWPF.Converters"
        xmlns:controls="clr-namespace:STimWPF.Controls"
				WindowState="Maximized" ResizeMode="NoResize" WindowStyle="None"
				Title="WAG - ContentWindow" Width="1366" Height="768" >
	<Window.Resources>
		<converters:HeadDistanceConverter x:Key="hdConverter"/>
	</Window.Resources>
	<Grid>
		<controls:SpatialAlignControl HeadLocation="{Binding ElementName=contentW, Path=CoreInstance.ClosestVisitor.HeadLocation}" 
																	Distance ="{Binding ElementName=contentW, Path=CoreInstance.ClosestVisitor.HeadLocation, Converter={StaticResource ResourceKey=hdConverter}}"/>
		<!--<Label Content="{Binding ElementName=contentW, Path=CoreInstance.ClosestVisitor.BodyOrientationAngle, FallbackValue=0}" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>-->
	</Grid>
</Window>
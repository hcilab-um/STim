<UserControl x:Class="STimWPF.Controls.AnimatedRectControl" x:Name="arControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:app="clr-namespace:STimWPF.Controls"
			 xmlns:converter="clr-namespace:STimWPF.Converters"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300"
             Loaded="arControl_Loaded">
    <UserControl.Resources>
        <converter:DistanceRectSizeConverter x:Key="drsConverter"/>
    </UserControl.Resources>
    <Canvas x:Name="cWrapper">
        <Rectangle x:Name="animatedRect" Fill="Black"/>
    </Canvas>
</UserControl>

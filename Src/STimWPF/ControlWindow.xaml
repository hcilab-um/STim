<Window x:Class="STimAttentionWPF.ControlWindow" x:Name="mwObject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:properties="clr-namespace:STimAttentionWPF.Properties"
        Title="WAG - ControlWindow" Height="420" Width="446" ResizeMode="NoResize" Loaded="ControlWindow_Loaded" Closed="ControlWindow_Closed">
	<StackPanel x:Name="spControls" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Stretch"  Margin="5,0">
		<Image x:Name="iSource" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
		<StackPanel Orientation="Vertical" VerticalAlignment="Bottom" Margin="0,5,0,0">
			<CheckBox Margin="10,5" IsChecked="{Binding ElementName=mwObject, Path=CoreInstance.ShowColorImage}">show color image</CheckBox>
		</StackPanel>
	</StackPanel>
</Window>
